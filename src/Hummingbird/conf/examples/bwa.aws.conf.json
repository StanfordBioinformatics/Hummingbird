{
  "Platform": {
    "service": "aws",
    "project": "gbsc-aws-prj-mvp",
    "regions": "us-west-2",
    "bucket": "bwa-hummingbird"
  },
  "Downsample": {
    "input": {
      "INPUT_R1": "s3://bwa-hummingbird/fastq/ERR194159_1.fastq.gz",
      "INPUT_R2": "s3://bwa-hummingbird/fastq/ERR194159_2.fastq.gz"
    },
    "target": 707646124,
    "fractions": [0.001, 0.01, 0.1],
    "output": "downsampled",
    "fullrun": false
  },
  "Profiling": [
    {
      "image": "xingziye/bwa-gatk:fetch_and_run",
      "result": "result/bwa",
      "thread": [8, 16, 32],
      "input-recursive": {
        "REF": "references/GRCh37lite"
      },
      "command": "bwa mem -t ${THREAD} -M -R '@RG\\tID:0\\tLB:Library\\tPL:Illumina\\tSM:' ${REF}/GRCh37-lite.fa ${INPUT_R1} ${INPUT_R2} > ${OUTPUT_SAM}",
      "output": {
        "OUTPUT_SAM": "output/bwa/output.sam"
      },
      "force": false,
      "disk": "200",
      "tries": 3
    }
  ]
}
